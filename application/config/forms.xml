<?xml version="1.0" encoding="UTF-8"?><forms>  <default>    <!-- our yet the only form which starts the download -->    <download>      <action>/index/download</action>      <method>post</method>      <name>download_form</name>            <elements>        <!-- sample element definition with validators and other options        <username>          <type>text</type>          <options>            <label>Username:</label>            <validators>              <strlen>                <validator>StringLength</validator>                <options>                  <min>4</min>                  <max>20</max>                </options>              </strlen>            </validators>            <required>true</required>          </options>        </username>                -->              <!-- radio buttons to choose file type -->        <filetype>          <type>radio</type>          <options>                        <label>File type to download:</label>            <!-- effectively, that makes the last element pre-checked -->            <checked>checked</checked>            <!-- redio button options -->            <multioptions>              <!--                this is a weak bit in the concept                 ideally, values like "ldb" and "csv" should be not hardcoded here but be defined                only once in a corresponding class that works with the form data, i.e. MyDownloader::DOWNLOAD_FILE_TYPE = 'csv'                however, having it like this is a lesser evil as it allows us to have form defined in XML                rather than in PHP              -->              <ldb>LDB (for Nokia Maps)</ldb>              <csv>CSV (for elsewhere)</csv>            </multioptions>          </options>                  </filetype>                <!-- submit button -->        <submit>          <type>submit</type>          <options>            <label>Download</label>          </options>        </submit>      </elements>    </download>  </default></forms>